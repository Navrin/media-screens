{
    "name": "media-desktop",
    "version": "2.0.1",
    "private": true,
    "homepage": "./",
    "main": "./src/electron-starter.js",
    "dependencies": {
        "@craco/craco": "^6.4.0",
        "@electron/remote": "^2.0.1",
        "@types/jest": "27.0.2",
        "@types/lodash": "^4.14.144",
        "@types/node": "16.11.7",
        "@types/react": "17.0.34",
        "@types/react-dom": "17.0.11",
        "@types/react-transition-group": "^4.4.4",
        "@types/styled-components": "^5.1.15",
        "auto-launch": "^5.0.5",
        "date-fns": "^2.0.0-beta.5",
        "electron-is-dev": "^2.0.0",
        "electron-updater": "^4.1.2",
        "lodash": "^4.17.15",
        "mobx": "^6.3.7",
        "mobx-react": "^7.2.1",
        "react": "^17.0.2",
        "react-css-transition-replace": "4.0.5",
        "react-dom": "^17.0.2",
        "react-image": "^4.0.3",
        "react-scripts": "4.0.3",
        "react-transition-group": "^4.4.2",
        "screen": "^0.2.10",
        "shufflr": "^2.0.2",
        "styled-components": "^5.3.3",
        "typescript": "4.4.4"
    },
    "scripts": {
        "start": "cross-env BROWSER=none nf start -p 3000",
        "build": "NODE_ENV=production craco build",
        "test": "craco test --env=jsdom",
        "eject": "craco eject",
        "electron": "electron .",
        "electron-start": "node ./src/electron-wait-react",
        "react-start": "craco start",
        "pack": "NODE_ENV=production electron-builder --dir",
        "dist": "NODE_ENV=production electron-builder",
        "publish": "NODE_ENV=production electron-builder --win -p always"
    },
    "build": {
        "extends": null,
        "appId": "com.bananablossom.media-desktop",
        "win": {
            "icon": "./public/icons/win/icon.ico"
        },
        "mac": {
            "icon": "./public/icons/mac/icon.icns"
        },
        "directories": {
            "buildResources": "public"
        },
        "files": [
            "./package.json",
            "./build/**/*",
            "./src/electron-starter.js"
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "Navrin",
                "repo": "media-screens"
            }
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "^15.3.1",
        "electron-builder": "^22.13.1",
        "electron-devtools-installer": "^3.2.0",
        "foreman": "^3.0.1"
    }
}
